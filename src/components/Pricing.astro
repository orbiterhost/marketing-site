---
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from "./ui/card";
import { Button } from "./ui/button";
---

<div
  class="relative z-10 flex flex-col gap-12 items-center justify-center min-h-[500px] w-full max-w-screen-lg mx-auto p-4"
>
  <div
    class="flex sm:flex-row flex-col gap-8 justify-center items-center w-full"
  >
    <Card className="bg-black glow border-primary text-white w-[300px]">
      <CardHeader>
        <CardTitle className="text-3xl"> Free </CardTitle>
        <CardDescription> $0/month </CardDescription>
      </CardHeader>
      <CardContent className="flex flex-col justify-between gap-28">
        <ul class="list-disc ml-4 space-y-2">
          <li>2 projects</li>
          <li>1 team member</li>
          <li>Free subdomain</li>
          <li>20k requests per month</li>          
        </ul>
        <a class="w-full" href="https://app.orbiter.host">
          <Button variant="secondary" className="w-full"> Sign up </Button>
        </a>
      </CardContent>
    </Card>

    <Card className="w-[300px] bg-black border-primary glow text-white">
      <CardHeader>
        <CardTitle className="text-3xl"> Launch </CardTitle>
        <CardDescription> $7/month (when paid annually) </CardDescription>
        <CardDescription> $9/month </CardDescription>
      </CardHeader>
      <CardContent className="flex flex-col justify-between gap-12">
        <ul class="list-disc ml-4 space-y-2">
          <li class="underline font-bold text-yellow-500">Support independent projects</li>
          <li>Unlimited projects</li>
          <li>3 collaborators</li>
          <li>Custom domain</li>
          <li>Custom redirects support</li>
          <li>Custom 404 page support</li>
          <li>100k requests per month</li>          
        </ul>
        <a class="w-full" href="https://app.orbiter.host">
          <Button variant="secondary" className="w-full"> Sign up </Button>
        </a>
      </CardContent>
    </Card>

    <Card className="bg-black text-white border-primary glow w-[300px]">
      <CardHeader>
        <CardTitle className="text-3xl"> Orbit </CardTitle>
        <CardDescription> $16/month (when paid annually) </CardDescription>
        <CardDescription> $19/month </CardDescription>
      </CardHeader>
      <CardContent className="flex flex-col justify-between gap-4">
        <ul class="list-disc ml-4 space-y-2">
          <li class="underline font-bold text-yellow-500">Support independent projects</li>
          <li>Unlimited projects</li>
          <li>Unlimited collaborators</li>          
          <li>Custom domain</li>
          <li>Analytics</li>
          <li>Custom redirects support</li>
          <li>Custom 404 page support</li>
          <li>Serverless functions (soon)</li>
          <li>Unlimited traffic</li>
        </ul>
        <a class="w-full" href="https://app.orbiter.host">
          <Button variant="secondary" className="w-full"> Sign up </Button>
        </a>
      </CardContent>
    </Card>
  </div>
</div>
