---
import AnimatedLink from "@/components/AnimatedLink.astro";
import { MobileMenu } from "./mobile-menu";
import logo from "@/assets/white_logo.png";
import { Button } from "./ui/button";
import { Github, Rocket } from "lucide-react";
---

<div
  class="w-full max-w-screen-xl flex items-center justify-between gap-2 my-12 mb-12 px-6"
>
  <a href="/">
    <img class="sm:h-12 h-10" src={logo.src} alt="" />
  </a>
  <MobileMenu client:load />
  <div class="hidden sm:flex items-center sm:gap-12 gap-3">
    <AnimatedLink className="text-xl" href="/about">About</AnimatedLink>
    <AnimatedLink className="text-xl" href="/pricing">Pricing</AnimatedLink>
    <AnimatedLink className="text-xl" href="/blog">Blog</AnimatedLink>
    <AnimatedLink className="text-xl" href="https://docs.orbiter.host"
      >Docs</AnimatedLink
    >
    <a
      class="flex items-center justify-center"
      href="https://github.com/orbiterhost"
      target="_blank"
      rel="noreferrer"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        class="!w-7 !h-7"
        ><path
          fill="white"
          d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33s1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2"
        ></path></svg
      >
    </a>

    <Button variant="secondary" className="text-xl">
      <a
        class="flex items-center justify-center gap-2"
        href="https://app.orbiter.host"
      >
        <Rocket className="!h-5 !w-5" />
        Launch
      </a>
    </Button>
  </div>
</div>
