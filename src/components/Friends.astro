---
import { Card } from "@/components/ui/card";

const friends = [
  {
    name: "Template0",
    description:
      "Over 500+ free website templates that can be used with Orbiter",
    image: "https://template0.com/og.png?v=1",
    link: "https://template0.com/",
  },
  {
    name: "Pinata",
    description: "The Internet's File API: IPFS at Scale",
    image:
      "https://framerusercontent.com/assets/cTpX2tRRi82714xgNek1a8114Jk.png",
    link: "https://pinata.cloud",
  },
];
---

<div
  class="relative z-10 flex flex-col w-full gap-4 justify-start items-center min-h-[600px] mx-auto p-4 mb-12"
>
  <h2 class="text-white text-3xl font-bold">Friends of Orbiter</h2>
  <p class="text-white">Partners in helping build a better internet</p>
  <div
    class="grid sm:grid-cols-2 gap-4 grid-cols-1 w-full max-w-screen-lg mx-auto p-4 my-12"
  >
    {
      friends.map((friend) => (
        <a class="mx-auto" target="_blank" href={friend.link}>
          <Card className="w-[300px] bg-black text-white min-h-[300px] overflow-hidden">
            <div class="aspect-video">
              <img
                class="h-full w-full object-cover"
                src={friend.image}
                alt=""
              />
            </div>
            <div class="flex flex-col gap-1 p-4">
              <h4 class="text-2xl font-bold">{friend.name}</h4>
              <p>{friend.description}</p>
            </div>
          </Card>
        </a>
      ))
    }
  </div>
</div>
