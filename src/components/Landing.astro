---
import astroLogo from "../assets/astro.svg";
import background from "../assets/background.svg";
---

<div class="flex flex-col items-center justify-center min-h-screen w-full relative">
  <div class="relative flex items-center justify-center">
    <!-- Orbit 1 -->
    <div class="absolute w-[200px] sm:w-[350px] md:w-[450px] lg:w-[550px] h-[200px] sm:h-[350px] md:h-[450px] lg:h-[550px] border border-black/20 rounded-full opacity-0 animate-spin-fast">
      <div class="absolute w-2 h-2 bg-black rounded-full -top-1 left-1/2 -translate-x-1/2"></div>
    </div>

    <!-- Orbit 2 -->
    <div class="absolute w-[300px] sm:w-[450px] md:w-[600px] lg:w-[750px] h-[300px] sm:h-[450px] md:h-[600px] lg:h-[750px] border border-black/20 rounded-full opacity-0 animate-spin-med">
      <div class="absolute w-2 h-2 bg-black rounded-full -top-1 left-1/2 -translate-x-1/2"></div>
    </div>

    <!-- Orbit 3 -->
    <div class="absolute hidden sm:block w-[550px] md:w-[750px] lg:w-[950px] h-[550px] md:h-[750px] lg:h-[950px] border border-black/20 rounded-full opacity-0 animate-spin-slow">
      <div class="absolute w-2 h-2 bg-black rounded-full -top-1 left-1/2 -translate-x-1/2"></div>
    </div>

    <!-- Orbit 4 -->
    <div class="absolute hidden md:block w-[950px] lg:w-[1150px] h-[950px] lg:h-[1150px] border border-black/20 rounded-full opacity-0 animate-spin-slowest">
      <div class="absolute w-2 h-2 bg-black rounded-full -top-1 left-1/2 -translate-x-1/2"></div>
    </div>

    <h1 class="text-4xl sm:text-6xl md:text-7xl lg:text-8xl font-thin relative z-10 animate-fade-in">ORBITER</h1>
  </div>
</div>
