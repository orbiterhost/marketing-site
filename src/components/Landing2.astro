---
import { Button } from "@/components/ui/button";
import { FileDropzone } from "@/components/dropzone";
import hero from "@/assets/hero.jpg";
import Nav from "@/components/Nav.astro";
import CompetitorDisplay from "@/components/Competitors";
---

<div
  class={`relative flex flex-col items-center justify-start min-h-screen w-full text-white gap-12 overflow-hidden`}
>
  <Nav />
  <div
    class="flex flex-col gap-2 items-center justify-center p-4 sm:mt-12 mt-6"
  >
    <h1 class="text-5xl sm:text-7xl font-bold text-center">
      The Open Source Alternative to
    </h1>
    <h1 class="text-5xl sm:text-7xl font-bold text-center">
      <CompetitorDisplay client:load />
    </h1>
    <h4 class="text-center text-lg sm:text-3xl mt-4">
      Launch your static site in seconds
    </h4>
  </div>
  <Button variant="secondary" className="relative z-10">
    <a href="https://app.orbiter.host">Get Started</a>
  </Button>
  <FileDropzone client:load />
</div>

<style>
  /* Keep global styles here if needed */
  /* Component-specific styles are now in the React component */
  .competitor-wrapper {
    display: inline-block;
    text-align: center;
    position: relative;
  }
  .competitor {
    display: inline-block;
    opacity: 1;
    transition: opacity 0.5s ease-in-out;
  }
  .fade-out {
    opacity: 0;
  }
  .fade-in {
    opacity: 1;
  }
</style>