          stroke="#000000"
          strokeWidth="0.5"
        />
        <rect
          x="48"
          y="55"
          width="4"
          height="3"
          rx="1"
          fill="#FFFFFF"
          stroke="#000000"
          strokeWidth="0.5"
        />
  
        <!-- Extra technical details -->
        <line
          x1="37"
          y1="43"
          x2="43"
          y2="43"
          stroke="#000000"
          strokeWidth="0.5"
        />
        <line
          x1="57"
          y1="43"
          x2="63"
          y2="43"
          stroke="#000000"
          strokeWidth="0.5"
        />
        <line
          x1="37"
          y1="52"
          x2="43"
          y2="52"
          stroke="#000000"
          strokeWidth="0.5"
        />
        <line
          x1="57"
          y1="52"
          x2="63"
          y2="52"
          stroke="#000000"
          strokeWidth="0.5"
        />
      </svg>
    </div>
    
    <!-- This is where your child components will be inserted -->
    <slot />
  </div>
  
  <style>
    @keyframes twinkle {
      0% { opacity: 0.3; }
      50% { opacity: 1; }
      100% { opacity: 0.3; }
    }
    
    @keyframes satellite {
      0% { 
        transform: translateX(-100%) translateY(100px) rotate(0deg);
      }
      100% { 
        transform: translateX(calc(100% + 100px)) translateY(-100px) rotate(15deg);
      }
    }
  </style>
  
  <script>
    // Client-side JavaScript
    document.addEventListener('DOMContentLoaded', () => {
      // Generate stars
      const starsContainer = document.getElementById('stars-container');
      for (let i = 0; i < 200; i++) {
        const size = Math.random() * 2 + 1;
        const opacity = Math.random() * 0.7 + 0.3;
        const star = document.createElement('div');
        star.className = 'absolute rounded-full bg-white';
        star.style.width = `${size}px`;
        star.style.height = `${size}px`;
        star.style.left = `${Math.random() * 100}%`;
        star.style.top = `${Math.random() * 100}%`;
        star.style.opacity = `${opacity}`;
        star.style.animation = `twinkle ${Math.random() * 3 + 2}s infinite ease-in-out ${Math.random() * 2}s`;
        starsContainer.appendChild(star);
      }
  
      // Animate satellite
      const satelliteContainer = document.getElementById('satellite-container');
      
      // Set initial position
      satelliteContainer.style.transform = 'translateX(-100%) translateY(100px) rotate(0deg)';
      
      // Apply the animation
      satelliteContainer.style.animation = 'satellite 15s linear infinite';
      
      // Implement parallax scrolling for stars
      window.addEventListener('scroll', () => {
        const scrollPercent = window.scrollY / (document.body.scrollHeight - window.innerHeight);
        const parallaxOffset = scrollPercent * 300;
        starsContainer.style.transform = `translateY(${parallaxOffset}px)`;
      });
    });
  </script>