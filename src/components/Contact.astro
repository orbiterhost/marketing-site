---
import { AvatarComponent } from "@/components/avatar-component";
import steve from "@/assets/steve.jpeg";
import justin from "@/assets/justin.jpeg";
import { Button } from "./ui/button";
---

<div
  class="flex flex-col gap-6 items-center justify-center min-h-screen sm:min-h-[700px] sm:my-12 w-full max-w-screen-lg mx-auto px-4"
>
  <h1 class="text-3xl font-extrabold tracking-tight lg:text-5xl text-center">
    Got questions? Let's talk!
  </h1>
  <p class="text-center">
    Orbiter is actively being built by <br class="sm:hidden" /> Justin Hunter and
    Steve Simkins
  </p>
  <div class="flex gap-12">
    <AvatarComponent client:load src={justin.src} alt="JH" fallbackText="JH" />
    <AvatarComponent client:load src={steve.src} alt="SS" fallbackText="SS" />
  </div>
  <a href="mailto:justin@orbiter.host,steve@orbiter.host">
    <Button>Contact</Button>
  </a>
</div>
