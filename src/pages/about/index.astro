---
import AnimatedLink from "@/components/AnimatedLink.astro";
import Layout from "@/layouts/Layout.astro";
import hero from "@/assets/hero.jpg";
import logo from "@/assets/white_logo.png";
import "@/styles/globals.css";
---

<Layout
  title="About"
  description="Why Orbiter stands out from the rest when it come to static site hosting"
>
  <main>
    <div
      class={`relative flex flex-col items-center justify-start sm:min-h-[450px] min-h-[250px] w-full text-white gap-12`}
    >
      <div
        class="w-full max-w-screen-xl flex items-center justify-between gap-2 sm:my-12 my-4 sm:mb-24 px-6"
      >
        <a href="/">
          <img class="h-12" src={logo.src} alt="" />
        </a>
        <AnimatedLink className="text-xl" href="/">Home</AnimatedLink>
      </div>

      <img
        src={hero.src}
        alt="Hero background"
        class="absolute inset-0 w-full h-full object-cover -z-10"
      />

      <div class="flex flex-col gap-2 items-center justify-center">
        <h1 class="text-6xl sm:text-8xl flex items-center gap-2 relative z-10">
          About
        </h1>
      </div>
    </div>
    <div class="flex flex-col w-full max-w-screen-xl min-h-[800px] mx-auto p-4">
      <!-- @ Justin content can go here -->
      <h1>Our story</h1>
    </div>
  </main>
</Layout>
