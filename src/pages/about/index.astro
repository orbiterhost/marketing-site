---
import Layout from "@/layouts/Layout.astro";
import Footer from "@/components/Footer.astro";
import hero from "@/assets/hero.jpg";
import About from "@/components/About.astro";
import Friends from "@/components/Friends.astro";
import Nav from "@/components/Nav.astro";
import PageWrapper from "@/components/PageWrapper.astro";
---

<Layout
  title="About"
  description="Why Orbiter stands out from the rest when it come to static site hosting"
>
  <PageWrapper>
    <main>
      <div
        class={`relative flex flex-col items-center justify-start w-full text-white gap-12 mb-10`}
      >
        <Nav />

        <div class="flex flex-col items-center justify-center border-0">
          <h1
            class="text-6xl sm:text-8xl flex items-center gap-2 relative z-10"
          >
            About
          </h1>
        </div>
      </div>
      <About />
      <div class="prose text-white bg-black/70 border border-primary rounded-lg p-6 my-8 mx-auto max-w-2xl text-center">
        <h3 class="text-2xl font-bold mb-2">Why Orbiter is Different</h3>
        <ul class="list-disc list-inside text-left mx-auto max-w-lg">
          <li><b>Open Source:</b> Orbiter is fully open source and built for the community.</li>
          <li><b>Independent:</b> No VC, no lock-in, just indie founders who care about the open web.</li>
          <li><b>bhvr Official Partner:</b> Orbiter is the official deployment partner for the <b>bhvr</b> fullstack framework, with a quickstart template in the CLI.</li>
        </ul>
      </div>
      <Friends />
    </main>
    <Footer />
  </PageWrapper>
</Layout>
