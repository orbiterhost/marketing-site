---
import AnimatedLink from "@/components/AnimatedLink.astro";
import Footer from "@/components/Footer.astro";
import Pricing from "@/components/Pricing.astro";
import Layout from "@/layouts/Layout.astro";
import logo from "@/assets/white_logo.png";
import hero from "@/assets/hero.jpg";
import Nav from "@/components/Nav.astro";
import PageWrapper from "@/components/PageWrapper.astro";
---

<Layout
  title="Pricing"
  description="Affordable static site hosting without the complexity"
>
  <PageWrapper>
    <main>
      <div
        class={`relative z-10 flex flex-col items-center justify-start mb-10 w-full text-white gap-12`}
      >
        <Nav />


        <div class="flex flex-col gap-2 items-center justify-center">
          <h1
            class="text-6xl sm:text-8xl flex items-center gap-2 relative z-10"
          >
            Pricing
          </h1>
        </div>
      </div>
      <div
        class="flex flex-col w-full gap-6 max-w-screen-xl min-h-[800px] mx-auto p-4 mb-12"
      >
        <Pricing />
      </div>
    </main>
    <Footer />
  </PageWrapper>
</Layout>
