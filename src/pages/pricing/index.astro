---
import AnimatedLink from "@/components/AnimatedLink.astro";
import Footer from "@/components/Footer.astro";
import Pricing from "@/components/Pricing.astro";
import Layout from "@/layouts/Layout.astro";
import logo from "@/assets/white_logo.png";
import hero from "@/assets/hero.jpg";
---

<Layout
  title="Pricing"
  description="Affordable static site hosting without the complexity"
>
  <main>
    <div
      class={`relative flex flex-col items-center justify-start sm:min-h-[450px] min-h-[250px] w-full text-white gap-12`}
    >
      <div
        class="w-full max-w-screen-xl flex items-center justify-between gap-2 sm:my-12 my-4 sm:mb-24 px-6"
      >
        <a href="/">
          <img class="sm:h-12 h-10" src={logo.src} alt="" />
        </a>
        <div class="flex items-center sm:gap-12 gap-3">
          <AnimatedLink className="sm:text-xl text-md" href="/"
            >Home</AnimatedLink
          >
          <AnimatedLink className="sm:text-xl text-md" href="/about"
            >About</AnimatedLink
          >
          <AnimatedLink className="sm:text-xl text-md" href="/blog"
            >Blog</AnimatedLink
          >
        </div>
      </div>

      <img
        src={hero.src}
        alt="Hero background"
        class="absolute inset-0 w-full h-full object-cover -z-10"
      />

      <div class="flex flex-col gap-2 items-center justify-center">
        <h1 class="text-6xl sm:text-8xl flex items-center gap-2 relative z-10">
          Pricing
        </h1>
      </div>
    </div>
    <div
      class="flex flex-col w-full gap-6 max-w-screen-xl min-h-[800px] mx-auto p-4 mb-12"
    >
      <Pricing />
    </div>
  </main>
  <Footer />
</Layout>
