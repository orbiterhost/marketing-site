---
import BaseHead from "../../components/BaseHead.astro";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import { Card, CardHeader } from "@/components/ui/card";
import "@/styles/globals.css";
import AnimatedLink from "@/components/AnimatedLink.astro";
import hero from "@/assets/hero.jpg";
import logo from "@/assets/white_logo.png";
import Footer from "@/components/Footer.astro";

const SITE_TITLE = "Orbiter Blog";
const SITE_DESCRIPTION = "The easiest way to host static websites";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <main>
      <div
        class={`relative flex flex-col items-center justify-start sm:min-h-[450px] min-h-[250px] w-full text-white gap-12`}
      >
        <div
          class="w-full max-w-screen-xl flex items-center justify-between gap-2 sm:my-12 my-4 sm:mb-24 px-6"
        >
          <a href="/">
            <img class="sm:h-12 h-10" src={logo.src} alt="" />
          </a>
          <div class="flex items-center sm:gap-12 gap-3">
            <AnimatedLink className="text-md sm:text-xl" href="/"
              >Home</AnimatedLink
            >
            <AnimatedLink className="text-md sm:text-xl" href="/about"
              >About</AnimatedLink
            >
            <AnimatedLink className="text-md sm:text-xl" href="/pricing"
              >Pricing</AnimatedLink
            >
          </div>
        </div>

        <img
          src={hero.src}
          alt="Hero background"
          class="absolute inset-0 w-full h-full object-cover -z-10"
        />

        <div class="flex flex-col gap-2 items-center justify-center">
          <h1
            class="text-6xl sm:text-8xl flex items-center gap-2 relative z-10"
          >
            Blog
          </h1>
        </div>
      </div>
      <div
        class="grid xl:grid-cols-4 lg:grid-cols-3 md:grid-cols-2 gap-4 grid-cols-1 w-full max-w-screen-xl min-h-[800px] mx-auto p-4"
      >
        {
          posts.map((post) => (
            <a class="mx-auto" href={`/blog/${post.id}/`}>
              <Card className="w-[300px] overflow-hidden">
                <div class="aspect-video">
                  <img
                    class="h-full w-full object-cover"
                    src={post.data.heroImage}
                    alt=""
                  />
                </div>
                <div class="flex flex-col gap-1 p-4">
                  <h4 class="text-2xl font-bold">{post.data.title}</h4>
                  <p>{post.data.description}</p>
                  <p>
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </div>
              </Card>
            </a>
          ))
        }
      </div>
    </main>
    <Footer />
  </body>
</html>
