import Layout from "@/layouts/Layout.astro";
import Footer from "@/components/Footer.astro";
import Nav from "@/components/Nav.astro";
---

<Layout title="Open Source" description="Orbiter is open sourceâ€”transparent, auditable, and built for the community.">
  <main>
    <Nav />
    <div class="max-w-2xl mx-auto py-12 px-4 text-white">
      <h1 class="text-4xl font-bold mb-4">Open Source</h1>
