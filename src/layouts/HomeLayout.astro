---
import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/orbiter.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <title>Orbiter</title>
    <meta
      name="description"
      content="The simplest way to upload and host static sites and apps"
    />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://app.orbiter.host" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Orbiter" />
    <meta
      property="og:description"
      content="The simplest way to upload and host static sites and apps"
    />
    <meta property="og:image" content="https://orbiter.host/og.png" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="app.orbiter.host" />
    <meta property="twitter:url" content="https://app.orbiter.host" />
    <meta name="twitter:title" content="Orbiter" />
    <meta
      name="twitter:description"
      content="The simplest way to upload and host static sites and apps"
    />
    <meta name="twitter:image" content="https://orbiter.host/og.png" />

    <meta property="fc:frame" content="vNext" />
    <meta property="fc:frame:image" content="https://orbiter.host/og.png" />
    <meta name="fc:frame:button:1" content="Launch" />
    <meta name="fc:frame:button:1:action" content="link" />
    <meta name="fc:frame:button:1:target" content="https://app.orbiter.host" />
    <meta name="fc:frame:button:2" content="Docs" />
    <meta name="fc:frame:button:2:action" content="link" />
    <meta name="fc:frame:button:2:target" content="https://docs.orbiter.host" />

    <ClientRouter />

    <script
      async
      defer
      src="https://www.google.com/recaptcha/api.js?render=6LcQHqQqAAAAADHN8zgMRAFL8c9DH1sHJ0yu-R-e"
    ></script>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
